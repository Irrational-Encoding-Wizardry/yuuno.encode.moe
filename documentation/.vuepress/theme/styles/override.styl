
@font-face 
    font-family: 'altheabold'
    src: url('/assets/althea-bold-webfont.woff2') format('woff2'),
         url('/assets/althea-bold-webfont.woff') format('woff')
    font-weight: normal
    font-style: normal

.site-name
    font-family: 'altheabold', 'serif'
    font-size: 40px !important

.hero
    border: 1px solid $borderColor
    background: linear-gradient(to right, $codeBgColor 0%, transparent 100%), url('/assets/sintel-bg-01.jpg')
    background-size: cover
    background-position: 100% 100%
    border-radius: 10px
    margin-top: 1.5em
    padding: 3em

    &:hover
        background: linear-gradient(to right, $codeBgColor 0%, transparent 100%), url('/assets/sintel-bg-01-sobel.png')
        background-size: cover
        background-position: 100% 100%

    *
        text-align: left 
        margin-left: 0 !important
        margin-right: 0 !important

    h1
        color: $accentColor
        margin-bottom: 0 !important
        font-size: 60px !important
        font-family: 'altheabold', 'serif'

    .description
        margin-top: 0 !important
        color: $borderColor !important

.features
    border-top: 0 !important
    border-bottom: 1px solid $borderColor

    margin-top: 0 !important
    margin-bottom: 40px !important

.sidebar, .navbar, .navbar > .links
    background-color $navBgColor

.site-name
    color: $accentColor !important

.badge.info 
    background-color: #4273b9 !important


.content h3 + p
    margin-top 0 !important